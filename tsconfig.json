{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "paths": {
      "libs/*": ["./src/libs/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "es2019"]
  },
  "include": ["./src/**/*", "./@types/**/*"],
  "exclude": ["node_modules"]
}
