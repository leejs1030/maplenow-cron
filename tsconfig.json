{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "paths": {
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*", "./@types/**/*"],
  "exclude": ["node_modules"]
}
